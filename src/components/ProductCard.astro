---
// props del producto
const { nombre, precio, stock, imagen_url,producto  } = Astro.props
---

<div class="border rounded-lg p-4 bg-white shadow-sm hover:shadow-md transition duration-300">
    <img src={imagen_url} alt={nombre} class="w-full h-48 object-cover rounded mb-3" />
    <h2 class="font-semibold text-lg truncate">{nombre}</h2>
    <p class="text-sm text-gray-600">Stock: {stock} unidades</p>
    <p class="text-primario font-bold mt-1">${precio.toLocaleString("es-CL")}</p>
    <a href="#" class="mt-3 inline-block text-center bg-primario text-white px-3 py-1 rounded hover:bg-blue-700 text-sm">
        Ver detalle
    </a>
</div>

<button
    type="button"
    class="text-left border rounded-lg p-4 bg-white shadow-sm hover:shadow-md transition duration-300 w-full"
    data-producto
    data-nombre={nombre}
    data-precio={precio}
    data-stock={stock}
    data-imagen={imagen_url}
    >
    <img src={imagen_url} alt={nombre} class="w-full h-48 object-cover rounded mb-3" />
    <h2 class="font-semibold text-lg truncate">{nombre}</h2>
    <p class="text-sm text-gray-600">Stock: {stock} unidades</p>
    <p class="text-primario font-bold mt-1">${precio}</p>
    <span class="mt-3 inline-block text-center bg-primario text-white px-3 py-1 rounded hover:bg-blue-700 text-sm">
        Ver detalle
    </span>
</button>