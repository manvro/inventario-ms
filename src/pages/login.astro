---
import Layout from "../layouts/Layout.astro";
const error = Astro.url.searchParams.get("error") || "";
---

<Layout title="Login - Inventario MS" showNavbar={false}>
  <main class="min-h-screen flex items-center justify-center bg-cover bg-center" style="background-image: url('');">
    <section class="grid grid-cols-1 md:grid-cols-2 rounded-2xl overflow-hidden shadow-2xl border border-gray-200 bg-white w-full max-w-5xl">
      <!-- Hero -->
      <aside class="relative hidden md:flex flex-col justify-between p-10 bg-black text-white">
        <h1 class="text-3xl font-bold">Inventario MS</h1>
        <div>
          <h2 class="text-4xl font-extrabold">¡Bienvenido de nuevo!</h2>
          <p class="mt-4 text-white/70">Gestiona tus productos y ventas en un solo lugar.</p>
        </div>
        <p class="text-xs text-white/50">&copy; {new Date().getFullYear()} Inventario MS</p>
      </aside>

      <!-- Card login -->
      <div class="bg-white flex items-center justify-center p-10">
        <form action="/login" method="POST" class="w-full max-w-sm space-y-5">
          <h2 class="text-2xl font-bold text-gray-900">Iniciar sesión</h2>

          {error && <p class="text-red-600 text-sm">Credenciales incorrectas</p>}

          <label class="block">
            <span class="block font-semibold text-gray-700">Correo electrónico</span>
            <input name="email" type="email" required
              class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-primario focus:outline-none" />
          </label>

          <label class="block">
            <span class="block font-semibold text-gray-700">Contraseña</span>
            <input name="password" type="password" required
              class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-primario focus:outline-none" />
          </label>

          <div class="flex items-center justify-between text-sm">
            <label class="flex items-center gap-2">
              <input type="checkbox" class="rounded text-primario" />
              Recordarme
            </label>
            <a href="/recuperar" class="text-primario hover:underline">¿Olvidaste tu contraseña?</a>
          </div>

          <button type="submit"
            class="w-full bg-primario text-white py-3 rounded-lg font-semibold hover:opacity-90">
            Entrar
          </button>

          <div class="flex items-center gap-3 text-xs text-gray-400">
            <div class="h-px w-full bg-gray-200"></div><span>o</span><div class="h-px w-full bg-gray-200"></div>
          </div>

          <a href="/signup"
            class="block text-center w-full py-3 border rounded-lg hover:bg-gray-50 font-medium">
            Crear cuenta gratis
          </a>
        </form>
      </div>
    </section>
  </main>
</Layout>
