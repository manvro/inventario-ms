---
import Layout from "../layouts/Layout.astro";
import { getSupabaseServer } from "../lib/supabase";
const supabase = getSupabaseServer(Astro);
const {
    data: { user },
} = await supabase.auth.getUser();

if (!user) {
    return Astro.redirect("/login");
}
---

<Layout>
    <main class="max-w-7xl mx-auto p-6 space-y-8">
        <header class="flex items-center justify-between">
            <h1 class="text-2xl md:text-3xl font-bold">Ventas semanales</h1>
            <a href="/" class="text-sm text-blue-600 hover:underline"
                >‚Üê Volver al inicio</a
            >
        </header>

        <!-- 1) Buscador / Agregar producto -->
        <section class="grid gap-4 md:grid-cols-3">
            <div class="md:col-span-2 border rounded-xl p-4">
                <h2 class="font-semibold mb-3">Buscar producto</h2>

                <!-- üëá contenedor para posicionar el dropdown -->
                <div class="flex gap-3 relative">
                    <input
                        id="buscarProducto"
                        list="listaProductos"
                        type="text"
                        placeholder="Nombre, SKU o c√≥digo de barras"
                        class="w-full border rounded-lg px-4 py-2"
                        aria-label="Buscar producto"
                        autocomplete="off"
                    />
                    <datalist id="listaProductos"></datalist>

                    <!-- üëá dropdown custom con im√°genes -->
                    <ul
                        id="sugerencias"
                        class="absolute left-0 top-[calc(100%+0.25rem)] z-50 w-[calc(100%-9rem)] max-h-80 overflow-auto
                rounded-xl border bg-white/95 shadow-xl backdrop-blur hidden"
                        role="listbox"
                        aria-label="Sugerencias de productos"
                    >
                    </ul>

                    <button
                        id="btnAgregarBusqueda"
                        class="px-4 py-2 rounded-lg bg-blue-600 text-white font-medium disabled:opacity-50"
                        disabled
                        title="Agregar producto seleccionado"
                    >
                        Agregar
                    </button>
                </div>

                <p class="text-xs text-gray-500 mt-2">
                    El buscador est√° conectado a tu cat√°logo en la base de
                    datos.
                </p>
            </div>

            <div class="border rounded-xl p-4">
                <h2 class="font-semibold mb-3">Atajos</h2>
                <ul class="text-sm text-gray-600 list-disc pl-5 space-y-1">
                    <li>
                        <kbd class="px-1.5 py-0.5 border rounded">Ctrl</kbd> + <kbd
                            class="px-1.5 py-0.5 border rounded">K</kbd
                        > abrir buscador
                    </li>
                    <li>
                        <kbd class="px-1.5 py-0.5 border rounded">+</kbd>/<kbd
                            class="px-1.5 py-0.5 border rounded">‚àí</kbd
                        > ajustar cantidad
                    </li>
                    <li>
                        <kbd class="px-1.5 py-0.5 border rounded">Enter</kbd> agrega
                        producto
                    </li>
                </ul>
            </div>
        </section>

        <!-- 2) Carrito -->
        <section class="border rounded-xl overflow-hidden">
            <div class="px-4 py-3 border-b bg-gray-50 font-semibold">
                Carrito
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm min-w-[600px]">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="w-6"></th>
                            <th>Producto</th>
                            <th class="text-right">Precio (CLP)</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-right">Subtotal</th>
                            <th class="text-right w-20 hidden sm:table-cell"
                                >Acciones</th
                            >
                        </tr>
                    </thead>
                    <tbody id="tbodyCarrito" class="[&>tr]:border-t">
                        <!-- El carrito se llena din√°micamente por JS -->
                    </tbody>
                </table>
            </div>
        </section>

        <!-- 3) Totales y confirmaci√≥n -->
        <section class="grid gap-4 md:grid-cols-3">
            <div class="md:col-span-2 border rounded-xl p-4">
                <h2 class="font-semibold mb-3">Observaciones</h2>
                <textarea
                    class="w-full border rounded-lg px-4 py-2 min-h-[88px]"
                    placeholder="Notas de la venta (opcional)"></textarea>
            </div>

            <div class="border rounded-xl p-4">
                <h2 class="font-semibold mb-3">Resumen</h2>
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span>√çtems</span><span id="lblItems">0</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Total bruto</span><span id="lblBruto">$0</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Descuento</span>
                        <span>
                            <input
                                id="inpDescuento"
                                type="number"
                                class="w-24 border rounded px-2 py-1 text-right"
                                placeholder="0"
                                aria-label="Descuento en CLP"
                            />
                        </span>
                    </div>
                    <div
                        class="flex justify-between font-semibold text-lg pt-2 border-t"
                    >
                        <span>Total a pagar</span><span id="lblTotal">$0</span>
                    </div>
                    <div class="pt-2">
                        <label class="block text-xs text-gray-500 mb-1"
                            >Medio de pago</label
                        >
                        <select
                            id="selMedioPago"
                            class="w-full border rounded px-3 py-2"
                        >
                            <option>Efectivo</option>
                            <option>D√©bito/Cr√©dito</option>
                            <option>Transferencia</option>
                        </select>
                    </div>
                </div>

                <div class="flex gap-2 mt-4">
                    <a href="/">
                        <button class="flex-1 px-4 py-2 rounded border">
                            Cancelar
                        </button>
                    </a>
                    <button
                        id="btnConfirmarVenta"
                        class="flex-1 px-4 py-2 rounded bg-blue-600 text-white font-semibold"
                    >
                        Confirmar venta
                    </button>
                </div>
            </div>
        </section>

        <script
            type="module"
            src={new URL("../scripts/ventas-semanales.ts", import.meta.url)
                .pathname}></script>
    </main>
</Layout>
